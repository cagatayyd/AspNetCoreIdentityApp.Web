
@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>

<div class="row">
    <div class="col-md-7 offset-md-2">
        <h1>Roller</h1>
    </div>
    <div class="col-md-2">
        <a asp-controller="Roles" asp-action="RoleCreate" asp-area="admin" class="btn btn-primary">Rol Ekle</a>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a class="btn btn-warning" asp-area="Admin" asp-action="RoleUpdate" asp-controller="roles" asp-route-id="@item.Id">Rol Güncelle</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-action="RoleDelete" asp-controller="roles" asp-route-id="@item.Id">Rol Sil</a></td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



